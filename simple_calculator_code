package com.example.regular_calculator

import android.view.View
import android.os.Bundle
import android.widget.Button
import android.widget.TextView
import androidx.appcompat.app.AppCompatActivity
import android.widget.Toast

class MainActivity : AppCompatActivity() {
    private var op: TextView? = null
    private var isDotAdder: Boolean = false
    private var isLastDigit: Boolean = false
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)
        op = findViewById(R.id.op)
    }

    fun OnDigit(view: View) {

        op?.append((view as Button).text)
        isLastDigit = true
//          Toast.makeText(this,"button clicked",Toast.LENGTH_LONG).show()
    }

    fun onOperator(view: View) {
        op?.text?.let {
            if (isLastDigit && !isOperatorAdded(it.toString())) {
                op?.append((view as Button).text)
                isLastDigit=false
                isDotAdder=false
            }
        }
    }

    fun onEqal(view: View) {
        var tvvalue = op?.text.toString()
        var prefix=""
        try {
            if( tvvalue.startsWith("-")) {
                prefix="-"
                tvvalue = tvvalue.substring(1)
            }
            if(tvvalue.contains("-")) {
                val splitValue = tvvalue.split("-")
                var one = splitValue[0]
                val two = splitValue[1]
                if(prefix.isNotEmpty()){
                    one=prefix+one;
                }
                op?.text = removezeroafteroperator((one.toDouble() - two.toDouble()).toString())
            }
            if(tvvalue.contains("+")) {
                val splitValue = tvvalue.split("+")
                var one = splitValue[0]
                val two = splitValue[1]
                if(prefix.isNotEmpty()){
                    one=prefix+one;
                }
                op?.text = removezeroafteroperator((one.toDouble() + two.toDouble()).toString())
            }
            if(tvvalue.contains("*")) {
                val splitValue = tvvalue.split("*")
                var one = splitValue[0]
                val two = splitValue[1]
                if(prefix.isNotEmpty()){
                    one=prefix+one;
                }
                op?.text = removezeroafteroperator((one.toDouble() * two.toDouble()).toString())
            }
            if(tvvalue.contains("/")) {
                val splitValue = tvvalue.split("/")
                var one = splitValue[0]
                val two = splitValue[1]
                if(prefix.isNotEmpty()){
                    one=prefix+one;
                }
                op?.text = removezeroafteroperator((one.toDouble() / two.toDouble()).toString())
            }

        }catch (e:java.lang.ArithmeticException){
            print(e.toString())
        }
    }
    private fun removezeroafteroperator(result: String):String{
        var value =result
        if(result.contains(".0")){
            value= result.substring(0,result.length - 2)
        }
        return  value
    }

    private fun isOperatorAdded(inpute: String): Boolean {
        print(inpute)
        return if (inpute.startsWith("-")) {
            false
        } else {
            (inpute.contains("-") ||
                    inpute.contains("+") ||
                    inpute.contains("*") ||
                    inpute.contains("/")
                    )


        }
    }
    fun OnClr(view: View) {
        op?.text = ""
        isDotAdder = false
        isLastDigit = false
    }

    fun OnDot(view: View) {
        if (isLastDigit && !isDotAdder) {
            op?.append((view as Button).text)
            isDotAdder = true
            isLastDigit = false
        }
    }
}


